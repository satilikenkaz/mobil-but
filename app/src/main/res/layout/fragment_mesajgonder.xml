<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mesajgonder_seciligrup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/tv_mesajgonder_seciligrup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Seçili Grup" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mesajgonder_secilimesaj"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_mesajgonder_secilimesaj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Seçili Mesaj" />

        </LinearLayout>
        <Button
            android:id="@+id/bt_mesajgonder_toplumesajgonder"
            android:layout_width="138dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Toplu Mesaj Gönder" />

        <TextView
            android:id="@+id/tv_mesajgonder_isimno"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="bottom|center"
            android:text="201813709014 Muhammed İbrahim Musab TÜRKMEN" />

    </LinearLayout>

</FrameLayout>